<%= form_with(model: @task, local: true) do |f| %>
  <div class="field">
    <div class="title">
      <%= f.label :title %><br>
      <%= f.text_field :title, placeholder: "Fill title (required)", size: 40 %>
    </div>
    <div class="content">
      <%= f.label :content %><br>
      <%= f.text_area :content, placeholder: "Compose new task...(brank allowed)", size: "50x2" %>
    </div>
  </div>
<%= f.submit "Post", class: "btn-xs btn-primary" %> <% end %>
